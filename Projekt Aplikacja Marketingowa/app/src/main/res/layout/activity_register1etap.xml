<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1D4DB"
    tools:context=".Register1etap">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#8EBDB8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/register1_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejestracja"
            android:textSize="30dp"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/user_name_editText"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:hint="Imię"
        android:background="@drawable/input_shape"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#636363"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/user_surname_editText"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:background="@drawable/input_shape"
        android:ems="10"
        android:hint="Nazwisko"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#636363"
        app:layout_constraintEnd_toEndOf="@+id/user_name_editText"
        app:layout_constraintStart_toStartOf="@+id/user_name_editText"
        app:layout_constraintTop_toBottomOf="@+id/user_name_editText"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/user_date_editText"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:background="@drawable/input_shape"
        android:ems="10"
        android:hint="Data urodzenia"
        android:textColor="#000000"
        android:inputType="date"
        android:minHeight="48dp"
        android:padding="12dp"
        android:textColorHint="#636363"
        app:layout_constraintEnd_toEndOf="@+id/user_surname_editText"
        app:layout_constraintStart_toStartOf="@+id/user_surname_editText"
        app:layout_constraintTop_toBottomOf="@+id/user_surname_editText"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/img_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/input_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_date_editText" />

    <TextView
        android:id="@+id/img_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wybierz zdjęcie profilowe"
        android:textColor="#636363"
        app:layout_constraintEnd_toEndOf="@+id/user_image_imageView"
        app:layout_constraintStart_toStartOf="@+id/user_image_imageView"
        app:layout_constraintTop_toBottomOf="@+id/user_image_imageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_button"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:background="@drawable/button_shape"
        android:text="Dalej"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_view" />

    <TextView
        android:id="@+id/text_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="48dp"
        android:text="Masz już konto?"
        android:textSize="17dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_button" />

    <ImageView
        android:id="@+id/user_image_imageView"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_view"
        app:layout_constraintEnd_toEndOf="@+id/img_view"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/img_view"
        app:srcCompat="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/to_login_register1_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Zaloguj się"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/text_textView"
        app:layout_constraintStart_toEndOf="@+id/text_textView"
        app:layout_constraintTop_toTopOf="@+id/text_textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_view"
        app:layout_constraintEnd_toEndOf="@+id/img_view"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/img_view"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>